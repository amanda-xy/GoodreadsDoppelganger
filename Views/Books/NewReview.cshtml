@model Review

@{
    ViewData["Title"] = "New Review";
}

<h2>New Review for @ViewBag.BookTitle by @ViewBag.BookAuthor</h2>
<br />
<form asp-action="NewReview">
    
    <div class="form-horizontal" role="form">
        <div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label h4" style="font-weight:bold;">What did you think about the book?</label>
                <br />
                <input asp-for="Rating" id="rangeinput" type="range" min="1" max="5" value="5" class="custom-range" style="max-width:25%; margin-right:1rem;" onchange="ratingRangeChanged(this.value);" />
                <output id="rangevalue" style="font-weight:bold;">5 - Really good!</output>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <h4 style="font-weight:bold;">Write your review:</h4>
    <div class="form-group">
        @Html.TextAreaFor(r => r.Text, 9, 100, new { @style = "padding:10px;", @class = "inpBox"})
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(r => r.HasSpoilers)
        <label style="font-weight:bold;">Review contains spoilers</label>
        <span asp-validation-for="HasSpoilers" class="text-danger"></span>
    </div>
 
    <br />
    <div>
        <input type ="hidden" asp-for="BookId" value="@ViewBag.BookId" />
    </div>
    <input type="submit" value="Create" class="btn btn-outline-primary" />
</form>
