@model GoodreadsDoppelganger.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="Rating" class="form-control inpBox" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"style="font-weight:bold;"></label>
                <textarea asp-for="Text" class="form-control inpBox"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label"style="font-weight:bold;">
                    <input class="form-check-input inpBox" asp-for="HasSpoilers" /> @Html.DisplayNameFor(model => model.HasSpoilers)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"style="font-weight:bold;"></label>
                <select asp-for="BookId" class="form-control inpBox" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label"style="font-weight:bold;"></label>
                <input asp-for="PublicationDate" class="form-control inpBox" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
