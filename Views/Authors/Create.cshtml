@model GoodreadsDoppelganger.Models.Author

@{
    ViewData["Title"] = "Create";
}

<h1>Create new author</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label" style="font-weight:bold;"></label>
                <input asp-for="FirstName" class="form-control inpBox" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"style="font-weight:bold;"></label>
                <input asp-for="LastName" class="form-control inpBox" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"style="font-weight:bold;"></label>
                <input asp-for="Biography" class="form-control inpBox" />
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"style="font-weight:bold;"></label>
                <input asp-for="BirthDate" class="form-control inpBox" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"style="font-weight:bold;"></label>
                <input asp-for="ImageUrl" class="form-control inpBox" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
