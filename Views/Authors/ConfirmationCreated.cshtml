@model Author

<h1>Author successfully created!</h1>
<hr />

<h1>@Model.FullName</h1>
<div style="padding:0px">

    <div style="float:left">
        <img src=@Model.ImageUrl alt=@Model.FullName style="max-height:300px;" />
    </div>
    <div style="float:left; margin-left:10px;">
        <p><span class="font-weight-bold">BIRTH DATE: </span>@Model.BirthDate.ToString("yyyy-MM-dd")</p>
        <p><span class="font-weight-bold">AVERAGE RATING: </span>@Model.AverageRating.ToString("0.0") of 5 stars</p>
        <a asp-action="Edit" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-primary">
            Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-primary">
            Delete
        </a>
    </div>
</div>

<div class="container row" style="margin-left:0px; padding:0px">
    <br />
    <p>@Model.Biography</p>
</div>

<a href="https://localhost:44379/Books/Create?authorId=@Model.Id" class="btn btn-outline-primary">
    Create new book for this author
</a>
